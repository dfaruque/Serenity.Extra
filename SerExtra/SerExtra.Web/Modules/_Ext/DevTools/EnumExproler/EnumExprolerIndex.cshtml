@model _Ext.DevTools.Model.EnumExprolerPageModel
@{
    ViewData["Title"] = "Enum Exproler";
}

<div class="panel panel-primary">
    <div class="panel-heading"><h4>Enum Explorer <small style="color:white">Summery</small> </h4></div>
    <div class="panel-body">
        <h4>Total Enums: @Model.EnumInfos.Count</h4>
    </div>
</div>
<hr />

<div class="row">

    @foreach (var enumInfo in Model.EnumInfos)
    {
        <div class="col-md-6 col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4> @enumInfo.EnumName <small>@enumInfo.EnumFullName</small></h4>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-condensed">
                        <tr>
                            <th>Name</th>
                            <th>Value</th>
                            <th>Description</th>
                        </tr>
                        @foreach (var enumValue in enumInfo.EnumValues)
                        {
                            <tr>
                                <td>@enumValue.Value</td>
                                <td>@enumValue.Name</td>
                                <td>@enumValue.Description</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    }
</div>
